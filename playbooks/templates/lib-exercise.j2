function exercise_wait() {

  if [ "$1" -gt "0" ] ; then

    delay="$1"

    while [[ "${delay}" -gt "0" ]]; do
      echo -n "."
      sleep 1
      ((--delay))

    done

  else

    echo "EXERCISE_WAIT FATAL: invalid paramter passed to function.  Must be numeric > 0"

  fi

  echo ""

}

