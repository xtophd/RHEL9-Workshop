function exercise_msg() {

  msg="$1"
  exp="$2"

  echo ""
  echo "## - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - "
  echo "## Exercise Message: $msg"

  if [[ ${#exp} > 0 ]] ; then
    echo "## EXAMPLE: ${exp}"
  fi

  echo ""

}



